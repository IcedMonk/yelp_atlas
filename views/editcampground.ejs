<% include partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%=data.title%></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/<%=data._id%>?_method=put" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="edit[title]" required value="<%=data.title%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="edit[price]" value="<%=data.price%>" required>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Put the Image of post" name="edit[image]" required value="<%=data.image%>">
        </div>
        <div class="form-group">
            <textarea rows="6" cols="47" required name="edit[text]"><%=data.text%></textarea>
          <!--<input class="form-control" type="text" placeholder="Put the description of post" name="text" value="data.text">-->
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit">
        </div>
      </form>
    </div>
  </div>
  </div>



<% include partials/footer %>