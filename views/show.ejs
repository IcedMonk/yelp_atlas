<% include partials/header%>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="li-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="image-responsive" src="<%=data.image%>">
                    <div class="caption-full">
                        <h4 class="pull-right">$<%=data.price%></h4>
                        <h4><a href=""#><%=data.title%></a></h4>
                        <p><%=data.text%></p> <br>
                        <p>Written By <strong><%=data.author.username%></strong></p>
                        <% if(currentUser && data.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-xs btn-warning" href="/<%=data._id%>/edit">Edit</a>
                        <form class="hava" action="/<%=data._id%>?_method=delete" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <% if(currentUser) {  %>
                            <a class="btn btn-success" href="/<%=data._id%>/comments/new">Leave Review</a>
                        <%  } else { %>
                            <a class="btn btn-success" disabled href="#">Leave Review</a>
                        <% } %>
                    </div>
                    <hr>
                    <% data.comments.forEach(function(e){ %>
                        <div class="row">
                            <div class="col-md-12">
                                    <strong><%=e.author.username%></strong>
                                    <span class="pull-right">10 Days ago</span>
                                    <p> <%=e.com%> </p>
                                     <% if(currentUser && e.author.id.equals(currentUser._id)) { %>
                                    <a class="btn btn-xs btn-warning" href="/<%=data._id%>/comments/<%=e._id%>/edit">Edit</a>
                                    <form  class="hava" action="/<%=data._id%>/comments/<%=e._id%>?_method=delete" method="POST">
                                     <button class="btn btn-xs btn-danger">Delete</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                   <% }) %>
                </div>
            </div>
        </div>
    </div>
    
<% include partials/footer%>
